<!DOCTYPE html>
<html>
<%- include('header.js') %>

  <body>
    <%- include('top.js') %>

      <h1>Cuenta <%= address %></h1>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= cuenta.qty %></span>
              <p>
                <%= cuenta.name %>
              </p>
            </div>
          </div>
        </div>
        <div class="col s12 m3">
          <form class="col s12" method=POST>
            <div class="row">
              <div class="input-field col s6">
                <input placeholder="Importe a cargar" name="usuario_id" id="usuario_id" type="text" class="validate">
                <label for="first_name">Importe</label>
              </div>
            </div>
            <div class="row">
              <button class="btn waves-effect waves-light" type="submit" name="action">Cargar
              <i class="material-icons right">send</i>
            </button>
            </div>
          </form>
        </div>
        <div class="col s12 m3">
          <form class="col s12" method=POST>
            <div class="row">
              <div class="input-field col s6">
                <input placeholder="Importe a quemar" name="usuario_id" id="usuario_id" type="text" class="validate">
                <label for="first_name">Importe</label>
              </div>
            </div>
            <div class="row">
              <button class="btn waves-effect waves-light" type="submit" name="action">Descargar
              <i class="material-icons right">send</i>
            </button>
            </div>
          </form>
        </div>
      </div>
      <div class="row">
        <table class="striped">
          <thead>
            <tr>
              <th>Movimiento</th>
              <th>Fecha</th>
              <th>Moneda</th>
              <th>Concepto</th>
              <th>Factura</th>
              <th>Acreedor</th>
              <th>Cantidad</th>
            </tr>
          </thead>
          <tbody>
            <% movimientos.forEach(function(elemento) { %>
              <tr>
                <% if(typeof elemento.issue !='undefined') { %>
                  <td>Agregado</td>
                  <td>
                    <%= elemento.time %>
                  </td>
                  <td>
                    <%= elemento.issue.name %>
                  </td>
                  <td>
                    <%= elemento.issue.details.concepto %>
                  </td>
                  <td>
                    <%= elemento.issue.details.factura_id %>
                  </td>
                  <td>
                    <%= elemento.issue.details.acreedor %>
                  </td>
                  <td>
                    <%= elemento.issue.qty %>
                  </td>
                  <% } else {  var comentario=JSON.parse(elemento.comment); %>
                    <td>Quita</td>
                    <td>
                      <%= elemento.time %>
                    </td>
                    <td>
                      <%= elemento.balance.assets[0].name %>
                    </td>
                    <td>
                      <%= comentario.concepto %>
                    </td>
                    <td>
                      <%= comentario.factura_id %>
                    </td>
                    <td></td>
                    <td>
                      <%= elemento.balance.assets[0].qty %>
                    </td>


                    <% } %>
              </tr>
              <% }); %>
          </tbody>
        </table>
      </div>
  </body>

</html>
